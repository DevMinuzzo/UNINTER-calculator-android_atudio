<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        style="@style/display_container">
        <TextView
            android:id="@+id/displayExpression"
            style="@style/display"
            android:layout_height="40dp"
            android:textSize="30sp"
            android:textColor="@color/light_black"
            android:layout_marginTop="20dp"
            android:singleLine="true" />
        <TextView
            android:id="@+id/displayResult"
            style="@style/display"
            android:layout_height="60dp"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            android:maxLines="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnClear"
                style="@style/btn_operation"
                android:text="C"/>
            <Button
                android:id="@+id/btnParenthesisLeft"
                style="@style/btn_operation"
                android:text="("/>
            <Button
                android:id="@+id/btnParenthesisRight"
                style="@style/btn_operation"
                android:text=")"/>
            <Button
                android:id="@+id/btnDivision"
                style="@style/btn_operation"
                android:text="/"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnNumber7"
                style="@style/btn_number"
                android:text="7"/>
            <Button
                android:id="@+id/btnNumber8"
                style="@style/btn_number"
                android:text="8"/>
            <Button
                android:id="@+id/btnNumber9"
                style="@style/btn_number"
                android:text="9"/>
            <Button
                android:id="@+id/btnMultiplication"
                style="@style/btn_operation"
                android:text="*"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnNumber4"
                style="@style/btn_number"
                android:text="4"/>
            <Button
                android:id="@+id/btnNumber5"
                style="@style/btn_number"
                android:text="5"/>
            <Button
                android:id="@+id/btnNumber6"
                style="@style/btn_number"
                android:text="6"/>
            <Button
                android:id="@+id/btnSubtraction"
                style="@style/btn_operation"
                android:text="-"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnNumber1"
                style="@style/btn_number"
                android:text="1"/>
            <Button
                android:id="@+id/btnNumber2"
                style="@style/btn_number"
                android:text="2"/>
            <Button
                android:id="@+id/btnNumber3"
                style="@style/btn_number"
                android:text="3"/>
            <Button
                android:id="@+id/btnAddition"
                style="@style/btn_operation"
                android:text="+"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnNumber0"
                android:layout_weight="2"
                style="@style/btn_number"
                android:text="0"/>
            <Button
                android:id="@+id/btnDot"
                style="@style/btn_operation"
                android:text="."/>
            <Button
                android:id="@+id/btnEquals"
                style="@style/btn_equals"
                android:text="="/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>